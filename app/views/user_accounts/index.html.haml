.wrapper
  .sp-header
  .pc-header
    .pc-header__inner
      .pc-header__inner__top
        .pc-header__inner__top__logo
          = image_tag 'fmarket_logo_red.svg', alt: 'fmarket_logo', height: '36', width: '134', class: ''
        %form.pc-header__inner__top__search
          %input{ type: "search", placeholder: "なにかお探しですか", class: "pc-header__inner__top__search__input" }
          = icon("fas", "search", class: "pc-header__inner__top__search__icon")
      .pc-header__inner__navbar
        %ul.pc-header__inner__navbar__menu-left
          %li.pc-header__inner__navbar__menu-left__item
            = icon("fas" , "list")
            %span カテゴリーから探す
          %li.pc-header__inner__navbar__menu-left__item
            = icon("fas", "tags")
            %span ブランドから探す
        %ul.pc-header__inner__navbar__menu-right
          %li.pc-header__inner__navbar__menu-right__item
            = icon("far", "heart")
            %span いいね一覧
          %li.pc-header__inner__navbar__menu-right__item
            = icon("far", "bell")
            %span お知らせ
          %li.pc-header__inner__navbar__menu-right__item
            = icon("fas", "check")
            %span やることリスト
          %li.pc-header__inner__navbar__menu-right__item
            = icon("far", "user")
            %span マイページ
  .breadcrumb
  .main
    .main__inner
      .sidebar
        %ul.sidebar__menu
          %li.sidebar__menu__item マイページ
          %li.sidebar__menu__item お知らせ
          %li.sidebar__menu__item やることリスト
          %li.sidebar__menu__item いいね一覧
          %li.sidebar__menu__item 出品する
          %li.sidebar__menu__item 出品した商品・出品中
          %li.sidebar__menu__item 出品した商品・取引中
          %li.sidebar__menu__item 出品した商品・売却済み
          %li.sidebar__menu__item 購入した商品・取引中
          %li.sidebar__menu__item 購入した商品・過去の取引
          %li.sidebar__menu__item ニュース一覧
          %li.sidebar__menu__item 評価一覧
          %li.sidebar__menu__item ガイド
          %li.sidebar__menu__list__item お問い合わせ
        .sidebar__payment
          %h3.sidebar__payment__title メルペイ
          %ul.sidebar__payment__list
            %li.sidebar__payment__list__item 売上・振込申請
            %li.sidebar__payment__list__item ポイント
        .sidebar__config
          %h3.sidebar__config__title 設定
          %ul.sidebar__config__list
            %li.sidebar__config__list__item プロフィール
            %li.sidebar__config__list__item 発送元・お届け先住所変更
            %li.sidebar__config__list__item 支払い方法
            %li.sidebar__config__list__item メール/パスワード
            %li.sidebar__config__list__item 本人情報
            %li.sidebar__config__list__item 電話番号の確認
            %li.sidebar__config__list__item ログアウト
      .main__inner__content
        .main__inner__content__user-icon
        .main__inner__content__notification
          %ul.main__inner__content__notification__tabs
            %li.main__inner__content__notification__tabs__item お知らせ
            %li.main__inner__content__notification__tabs__item やることリスト
          .main__inner__content__notification__content
            .main__inner__content__notification__message
            .main__inner__content__notification__alert
        .main__inner__content__purchase-history
  .banner
  .footer
  .sell-button
